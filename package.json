{
  "name": "tap-to-donate",
  "version": "1.0.0",
  "description": "POC for digital donations a serverless API for managing donation campaigns and processing donations.",
  "main": "index.js",
  "scripts": {
    "dev": "serverless offline",
    "build": "serverless package",
    "deploy": "serverless deploy",
    "remove": "serverless remove",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v",
    "start:local": "npm run docker:up && npm run dev",
    "test:donate": "vitest test/handlers/donate.test.ts",
    "test:createCampaign": "vitest test/handlers/createCampaign.test.ts",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "keywords": ["serverless", "aws", "lambda", "mongodb", "donations"],
  "author": "Gabriel Gentil",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.133",
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.50.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.3.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "dependencies": {
    "mongoose": "^8.0.0",
    "uuid": "^9.0.1"
  }
} 